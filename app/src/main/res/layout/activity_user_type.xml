<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapp2"
    tools:context=".UserTypeActivity">

    <Button
        android:id="@+id/type_carer"
        android:layout_width="163dp"
        android:layout_height="56dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="I'm signing up as a carer"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/type_patient_family"
        app:layout_constraintStart_toStartOf="@+id/type_patient_family"
        app:layout_constraintTop_toBottomOf="@+id/type_patient_family" />

    <Button
        android:id="@+id/type_patient_family"
        android:layout_width="164dp"
        android:layout_height="54dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="I'm signing up as a patient's family"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/type_patient_btn"
        app:layout_constraintStart_toStartOf="@+id/type_patient_btn"
        app:layout_constraintTop_toBottomOf="@+id/type_patient_btn" />

    <TextView
        android:id="@+id/label_title"
        android:layout_width="189dp"
        android:layout_height="57dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="558dp"
        android:text="CarerWorks"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#3FCCB0"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_registration_usertype_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which user type are you?"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/label_title"
        app:layout_constraintStart_toStartOf="@+id/label_title"
        app:layout_constraintTop_toBottomOf="@+id/label_title" />

    <Button
        android:id="@+id/type_patient_btn"
        android:layout_width="159dp"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@android:color/darker_gray"
        android:text="I'm signing up as a Patient"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/label_registration_usertype_title"
        app:layout_constraintStart_toStartOf="@+id/label_registration_usertype_title"
        app:layout_constraintTop_toBottomOf="@+id/label_registration_usertype_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>