<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewAppointmentActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:background="@color/browser_actions_bg_grey"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </LinearLayout>

    <TextView
        android:id="@+id/logoutBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Logout"
        android:textColor="#FF5722"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toEndOf="@+id/txt_usernameViewAppoint"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txt_usernameViewAppoint"
        android:layout_width="167dp"
        android:layout_height="20dp"
        android:layout_marginStart="-150dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toEndOf="@+id/imageViewVappoint"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txt_ratingScoreViewAppoint"
        android:layout_width="166dp"
        android:layout_height="21dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_usernameViewAppoint"
        app:layout_constraintStart_toStartOf="@+id/txt_usernameViewAppoint"
        app:layout_constraintTop_toBottomOf="@+id/txt_usernameViewAppoint" />

    <ImageView
        android:id="@+id/imageViewVappoint"
        android:layout_width="55dp"
        android:layout_height="44dp"
        android:layout_marginStart="-330dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <ScrollView
        android:layout_width="395dp"
        android:layout_height="651dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/appointmentViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current Appointment Status"
                android:textSize="24sp"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/noAppointmentLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="You have no upcomming appointments. Please request for an appointment if required."
                android:textColor="#F84040"
                android:visibility="invisible"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewAppointment"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:layout_margin="10dp"
                android:visibility="invisible"
                app:cardBackgroundColor="#DAD5D5"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="348dp"
                    android:layout_height="224dp">

                    <TextView
                        android:id="@+id/dateViewTxt"
                        android:layout_width="200dp"
                        android:layout_height="19dp"
                        android:textSize="15sp"
                        app:layout_constraintEnd_toEndOf="@+id/dateLabel"
                        app:layout_constraintStart_toStartOf="@+id/dateLabel"
                        app:layout_constraintTop_toBottomOf="@+id/dateLabel" />

                    <TextView
                        android:id="@+id/dateLabel"
                        android:layout_width="200dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="8dp"
                        android:text="Date:"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.045"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/timeLabelHistory"
                        android:layout_width="78dp"
                        android:layout_height="17dp"
                        android:layout_marginTop="12dp"
                        android:text="Time:"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="@+id/dateViewTxt"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/dateViewTxt"
                        app:layout_constraintTop_toBottomOf="@+id/dateViewTxt" />

                    <TextView
                        android:id="@+id/timeViewTxt"
                        android:layout_width="79dp"
                        android:layout_height="18dp"
                        app:layout_constraintEnd_toEndOf="@+id/timeLabelHistory"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/timeLabelHistory"
                        app:layout_constraintTop_toBottomOf="@+id/timeLabelHistory" />

                    <TextView
                        android:id="@+id/addressLabel"
                        android:layout_width="205dp"
                        android:layout_height="19dp"
                        android:layout_marginTop="8dp"
                        android:text="Address and Postcode"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="@+id/timeViewTxt"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/timeViewTxt"
                        app:layout_constraintTop_toBottomOf="@+id/timeViewTxt" />

                    <TextView
                        android:id="@+id/addressNpostcodeTxt"
                        android:layout_width="273dp"
                        android:layout_height="50dp"
                        app:layout_constraintEnd_toEndOf="@+id/addressLabel"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/addressLabel"
                        app:layout_constraintTop_toBottomOf="@+id/addressLabel" />

                    <TextView
                        android:id="@+id/statusLabelHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Status:"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/dateLabel"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/statusTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@+id/statusLabelHistory"
                        app:layout_constraintStart_toStartOf="@+id/statusLabelHistory"
                        app:layout_constraintTop_toBottomOf="@+id/statusLabelHistory" />

                    <Button
                        android:id="@+id/rescheduleAppointmentBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reschedule"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toStartOf="@+id/deleteAppointment"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/addressNpostcodeTxt" />

                    <Button
                        android:id="@+id/deleteAppointment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textSize="10sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.829"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/addressNpostcodeTxt" />

                    <TextView
                        android:id="@+id/carerAssignedLabel"
                        android:layout_width="116dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="15dp"
                        android:text="Carer Assigned:"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="@+id/statusLabelHistory"
                        app:layout_constraintHorizontal_bias="0.514"
                        app:layout_constraintStart_toStartOf="@+id/statusLabelHistory"
                        app:layout_constraintTop_toBottomOf="@+id/statusTxt" />

                    <TextView
                        android:id="@+id/carerAssignedTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        app:layout_constraintEnd_toEndOf="@+id/carerAssignedLabel"
                        app:layout_constraintStart_toStartOf="@+id/carerAssignedLabel"
                        app:layout_constraintTop_toBottomOf="@+id/carerAssignedLabel" />

                    <TextView
                        android:id="@+id/timeDurationLabel"
                        android:layout_width="101dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="90dp"
                        android:layout_marginTop="12dp"
                        android:text="Duration (hr)"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@+id/carerAssignedLabel"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/timeLabelHistory"
                        app:layout_constraintTop_toBottomOf="@+id/dateViewTxt" />

                    <TextView
                        android:id="@+id/durationTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@+id/timeDurationLabel"
                        app:layout_constraintStart_toStartOf="@+id/timeDurationLabel"
                        app:layout_constraintTop_toBottomOf="@+id/timeDurationLabel" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>