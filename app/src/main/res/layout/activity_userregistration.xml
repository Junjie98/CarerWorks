<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapp2"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/label_title"
                android:layout_width="189dp"
                android:layout_height="57dp"
                android:text="CarerWorks"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="#3FCCB0"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/label_registration_usertype_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registration"
                android:layout_marginTop="0dp"
                android:layout_gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/registerEmailText"
                android:layout_width="283dp"
                android:layout_height="50dp"
                android:background="@drawable/background_input"
                android:drawableLeft="@drawable/ic_baseline_email"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Email Address"
                android:inputType="textEmailAddress"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textSize="18sp"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/registerPasswordText"
                android:layout_width="283dp"
                android:layout_height="50dp"
                android:background="@drawable/background_input"
                android:drawableLeft="@drawable/ic_baseline_security"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/registerFullNameTxt"
                android:layout_width="283dp"
                android:layout_height="50dp"
                android:background="@drawable/background_input"
                android:drawableLeft="@drawable/ic_baseline_person"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/registerGender"
                android:layout_width="283dp"
                android:layout_height="50dp"
                android:background="@drawable/background_input"
                android:drawableLeft="@drawable/ic_baseline_person"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Gender"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/registerDob"
                android:layout_width="283dp"
                android:layout_height="50dp"
                android:background="@drawable/background_input"
                android:drawableLeft="@android:drawable/ic_menu_my_calendar"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="DOB e.g: dd/mm/yyyy"
                android:inputType="date"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/registerPhone"
                android:layout_width="283dp"
                android:layout_height="50dp"
                android:background="@drawable/background_input"
                android:drawableLeft="@android:drawable/stat_sys_phone_call"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textColorHint="@color/white" />

            <EditText
                android:id="@+id/familyPatientID"
                android:layout_width="283dp"
                android:layout_height="wrap_content"
                android:background="@drawable/background_input"
                android:drawableLeft="@drawable/ic_baseline_person"
                android:drawablePadding="15dp"
                android:ems="10"
                android:hint="Patient ID, Below their username"
                android:inputType="textPersonName"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:textColorHint="@color/white"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/alreadyHaveAnAccountLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already Have An Account?"
                android:layout_marginTop="25dp"
                android:layout_gravity="center"
                android:textColor="#FFFFF1" />

            <TextView
                android:id="@+id/loginHereLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:text="Login Here"
                android:textColor="#FF5722" />

            <Button
                android:id="@+id/registerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:text="Register" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>