<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainUICarerActivity">

    <ImageButton
        android:id="@+id/appointmentBtn"
        android:layout_width="115dp"
        android:layout_height="107dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/appointment_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="99dp"
        android:layout_height="37dp"
        android:layout_marginTop="-40dp"
        android:text="Manage Appointment"
        app:layout_constraintEnd_toEndOf="@+id/appointmentBtn"
        app:layout_constraintStart_toStartOf="@+id/appointmentBtn"
        app:layout_constraintTop_toBottomOf="@+id/appointmentBtn" />

    <ImageButton
        android:id="@+id/historyLogBtn"
        android:layout_width="126dp"
        android:layout_height="105dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="56dp"
        android:src="@drawable/ic_baseline_history"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/mapTrackerBtn"
        android:layout_width="118dp"
        android:layout_height="90dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/appointmentBtn"
        app:layout_constraintStart_toStartOf="@+id/appointmentBtn"
        app:layout_constraintTop_toBottomOf="@+id/appointmentBtn"
        app:srcCompat="@android:drawable/ic_dialog_map" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="408dp"
        android:layout_height="75dp"
        android:background="@color/browser_actions_bg_grey"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="55dp"
        android:layout_height="44dp"
        android:layout_marginStart="-350dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/txt_username"
        android:layout_width="167dp"
        android:layout_height="20dp"
        android:layout_marginStart="-150dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_ratingScore"
        android:layout_width="166dp"
        android:layout_height="21dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_username"
        app:layout_constraintStart_toStartOf="@+id/txt_username"
        app:layout_constraintTop_toBottomOf="@+id/txt_username" />

    <TextView
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Logout"
        android:textColor="#FF5722"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toEndOf="@+id/txt_username"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>