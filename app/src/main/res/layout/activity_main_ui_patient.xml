<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainUIPatientActivity">

    <ImageButton
        android:id="@+id/appointmentBtn"
        android:layout_width="115dp"
        android:layout_height="107dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/appointment_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="99dp"
        android:layout_height="37dp"
        android:layout_marginTop="-40dp"
        android:text="Manage Appointment"
        app:layout_constraintEnd_toEndOf="@+id/appointmentBtn"
        app:layout_constraintStart_toStartOf="@+id/appointmentBtn"
        app:layout_constraintTop_toBottomOf="@+id/appointmentBtn" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="126dp"
        android:layout_height="105dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="56dp"
        android:src="@drawable/logicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/mapTrackerBtn"
        android:layout_width="118dp"
        android:layout_height="90dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/appointmentBtn"
        app:layout_constraintStart_toStartOf="@+id/appointmentBtn"
        app:layout_constraintTop_toBottomOf="@+id/appointmentBtn"
        app:srcCompat="@android:drawable/ic_dialog_map" />

</androidx.constraintlayout.widget.ConstraintLayout>