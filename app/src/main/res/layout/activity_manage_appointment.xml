<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageAppointmentActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="77dp"
        android:background="@color/browser_actions_bg_grey"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </LinearLayout>

    <TextView
        android:id="@+id/logoutBtn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:text="Logout"
        android:textColor="#FF5722"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toEndOf="@+id/txt_username2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_username2"
        android:layout_width="167dp"
        android:layout_height="20dp"
        android:layout_marginStart="-150dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_ratingScore2"
        android:layout_width="166dp"
        android:layout_height="21dp"
        android:layout_marginTop="3dp"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/txt_username2"
        app:layout_constraintStart_toStartOf="@+id/txt_username2"
        app:layout_constraintTop_toBottomOf="@+id/txt_username2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="55dp"
        android:layout_height="44dp"
        android:layout_marginStart="-330dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_baseline_account_circle_24"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout" />

    <LinearLayout
        android:layout_width="387dp"
        android:layout_height="643dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/manageAppointmentTitle"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="Manage Appointment"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/manageAppointmentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select the option required."
            android:textSize="16sp" />

        <Button
            android:id="@+id/makeAppointmentBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#D34848"
            android:text="Make Appointment" />

        <Button
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#D34848"
            android:text="Rearrange Appointment" />

        <Button
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#D34848"
            android:text="View Appointment" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>